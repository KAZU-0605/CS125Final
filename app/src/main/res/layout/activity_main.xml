<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00964949"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#83FF9800"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#9C27B0"
            android:text="Currency Convertor"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#000000"
            android:textColorHighlight="#FF0000"
            android:textIsSelectable="false"
            android:textSize="24sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_start"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_weight="3"
                android:text="To"
                android:gravity="center" />

            <Spinner
                android:id="@+id/spinner_end"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_weight="1" />

        </LinearLayout>

        <EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:ems="10"
            android:hint="enter the amount you want to convert"
            android:inputType="number"
            android:padding="5dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/convert"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="#9C27B0"
            android:text="Convert"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="327dp"
            android:background="#8BC34A"
            android:hint="result will show here"
            android:includeFontPadding="false"
            android:textSize="24sp" />

    </LinearLayout>
</LinearLayout>